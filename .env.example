# Hephaestus Homelab Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# DOMAIN & NETWORKING
# ============================================================================
DOMAIN=example.com
TZ=America/New_York

# ============================================================================
# CLOUDFLARE CONFIGURATION
# ============================================================================
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# ============================================================================
# GRAFANA & MONITORING
# ============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-secure-password

# ============================================================================
# DATABASE CREDENTIALS (for CapitolScope)
# ============================================================================
POSTGRES_USER=capitolscope
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=capitolscope_production

# ============================================================================
# APPLICATION PATHS
# These are the absolute paths to your application repositories on the host
# ============================================================================
MAGIC_PAGES_API_PATH=/home/chris/apps/magic-pages-api
CAPITOLSCOPE_PATH=/home/chris/apps/capitolscope
SCHEDSHARE_PATH=/home/chris/apps/schedshare
PORTFOLIO_PATH=/home/chris/apps/portfolio
MAGIC_PAGES_FRONTEND_PATH=/home/chris/apps/magic-pages-frontend

# ============================================================================
# MAGIC PAGES API CONFIGURATION
# ============================================================================
MAGIC_PAGES_SECRET_KEY=django-insecure-change-this-to-a-long-random-string
MAGIC_PAGES_DB_URL=sqlite:///db.sqlite3
# OR for PostgreSQL:
# MAGIC_PAGES_DB_URL=postgresql://user:password@host:5432/dbname
MAGIC_PAGES_ALLOWED_HOSTS=api.magicpages.example.com,localhost

# ============================================================================
# CAPITOLSCOPE CONFIGURATION
# ============================================================================
CAPITOLSCOPE_API_KEY=your-capitolscope-api-key-here

# ============================================================================
# SCHEDSHARE CONFIGURATION
# ============================================================================
SCHEDSHARE_SECRET_KEY=flask-secret-change-this-to-a-long-random-string
SCHEDSHARE_DB_URL=sqlite:///schedshare.db
# OR for PostgreSQL:
# SCHEDSHARE_DB_URL=postgresql://user:password@host:5432/schedshare

# ============================================================================
# PORTFOLIO CONFIGURATION
# ============================================================================
PORTFOLIO_SECRET_KEY=portfolio-secret-change-this-to-a-long-random-string

# ============================================================================
# BACKUP CONFIGURATION (for backup script)
# ============================================================================
BACKUP_DESTINATION=/mnt/backup
# OR remote backup:
# BACKUP_DESTINATION=user@nas.local:/volume1/backups/hephaestus

# ============================================================================
# OPTIONAL: EMAIL NOTIFICATIONS
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=alerts@example.com

# ============================================================================
# OPTIONAL: TAILSCALE
# ============================================================================
# TAILSCALE_AUTH_KEY=tskey-auth-xxxxx
